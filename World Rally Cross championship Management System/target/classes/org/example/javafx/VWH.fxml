<AnchorPane id="background" prefHeight="400.0" prefWidth="600.0" stylesheets="@VWH.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx.VWH">

    <children>
        <AnchorPane id="head" layoutY="-1.0" prefHeight="50.0" prefWidth="600.0">
